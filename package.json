{
  "name": "@qiwi/nestjs-enterprise-monorepo",
  "version": "0.0.0",
  "description": "QIWI Nestjs Enterprise",
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "scripts": {
    "clean": "yarn workspaces foreach -p run clean",
    "prebuild": "yarn infra:tsc -b packages/facade/tsconfig.es6.json && yarn buildstamp",
    "buildstamp": "yarn infra:buildstamp --git --output='buildstamp.json'",
    "build": "yarn clean && yarn prebuild && yarn workspaces foreach --topological-dev -p run build",
    "build-ci": "yarn prebuild && yarn workspaces foreach -p run build",
    "jest": "yarn infra:jest --runInBand --forceExit --detectOpenHandles",
    "test": "yarn test:node",
    "test:node": "c8 -r lcov -o ./coverage node --loader tsx --test packages/*/src/test/ts/**/*.spec.ts",
    "test:report": "yarn test && yarn coveralls:push",
    "coverage:merge": "node scripts/js/coverage-merge.js",
    "codeclimate:push": "codeclimate-test-reporter < ./coverage/lcov.info",
    "coveralls:push": "cat ./coverage/lcov.info | coveralls || echo 'coveralls push failed :(' && exit 0",
    "docs": "yarn infra:typedoc packages/**/src/main",
    "postupdate": "yarn && npm_config_yes=true npx yarn-audit-fix && yarn build && yarn test",
    "lint": "yarn workspaces foreach -p run lint",
    "lint:fix": "yarn workspaces foreach -p run lint:fix",
    "format": "yarn workspaces foreach -p run format"
  },
  "devDependencies": {
    "c8": "^8.0.1",
    "codeclimate-test-reporter": "^0.5.1",
    "coveralls": "^3.1.1",
    "find-git-root": "^1.0.4",
    "jest": "^29.6.2",
    "snazzy": "^9.0.0",
    "tsx": "^3.12.7"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qiwi/nestjs-enterprise.git"
  },
  "packageManager": "yarn@4.0.0-rc.13"
}
