{
  "transform": {
    "^.+\\.tsx?$": ["ts-jest", {"useESM": true, "tsconfig": "<rootDir>/tsconfig.test.json"}]
  },
  "collectCoverage": true,
  "coveragePathIgnorePatterns": [
    "test"
  ],
  "collectCoverageFrom": [
    "<rootDir>/src/main/**/*"
  ],
  "testMatch": [
    "<rootDir>/src/test/**/!(*.node).(j|t)s"
  ],
  "testPathIgnorePatterns": [
    "mock",
    "/node_modules/"
  ],
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json",
    "node"
  ],
  "preset": "ts-jest",
  "extensionsToTreatAsEsm": [".ts", ".d.ts"]
}
